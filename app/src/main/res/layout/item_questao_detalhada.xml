<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/txtBancaItemQuestaoDetalhada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/txtDescricaoItemQuestaoDetalhada"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/stringBanca"
        />

    <TextView
        android:id="@+id/txtAnoItemQuestaoDetalhada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/txtBancaItemQuestaoDetalhada"
        app:layout_constraintTop_toTopOf="@+id/txtBancaItemQuestaoDetalhada"
        tools:text="@string/stringAno"
        />

    <TextView
        android:id="@+id/txtDificudadeItemQuestaoDetalhada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/txtAnoItemQuestaoDetalhada"
        app:layout_constraintTop_toTopOf="@+id/txtAnoItemQuestaoDetalhada"
        tools:text="@string/stringDificudade"
        />

    <TextView
        android:id="@+id/txtDescricaoItemQuestaoDetalhada"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintWidth_max="320dp"
        android:textSize="22sp"
        android:gravity="start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBancaItemQuestaoDetalhada"
        tools:text="@string/stringDescricao" />

    <RadioGroup
        android:id="@+id/grupoBotoesItemQuestaoDetalhada"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/txtDescricaoItemQuestaoDetalhada"
        app:layout_constraintStart_toStartOf="@+id/txtDescricaoItemQuestaoDetalhada"
        app:layout_constraintTop_toBottomOf="@+id/txtDescricaoItemQuestaoDetalhada">

        <RadioButton
            android:id="@+id/botao1ItemQuestaoDetalhada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="start|center"
            tools:text="Alternativa"
            android:background="@drawable/botao_alternativa"
            android:button="@android:color/transparent"
            android:textSize="20sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />

        <RadioButton
            android:id="@+id/botao2ItemQuestaoDetalhada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/botao_alternativa"
            android:button="@android:color/transparent"
            android:gravity="center|start"
            android:paddingStart="16dp"
            android:paddingTop="10dp"
            android:paddingEnd="16dp"
            android:paddingBottom="10dp"
            android:textSize="20sp"
            tools:text="Alternativa" />

        <RadioButton
            android:id="@+id/botao3ItemQuestaoDetalhada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="start|center"
            tools:text="Alternativa"
            android:background="@drawable/botao_alternativa"
            android:button="@android:color/transparent"
            android:textSize="20sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />

        <RadioButton
            android:id="@+id/botao4ItemQuestaoDetalhada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="start|center"
            tools:text="Alternativa"
            android:background="@drawable/botao_alternativa"
            android:button="@android:color/transparent"
            android:textSize="20sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />

    </RadioGroup>

    <ListView
        android:id="@+id/listaComentariosQuestaoDetalhada"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/grupoBotoesItemQuestaoDetalhada"
        app:layout_constraintEnd_toEndOf="@id/grupoBotoesItemQuestaoDetalhada"
        app:layout_constraintTop_toBottomOf="@+id/grupoBotoesItemQuestaoDetalhada"
        app:layout_constraintBottom_toTopOf="@id/botaoResponderItemQuestaoDetalhada"
        />

    <Button
        android:id="@+id/botaoResponderItemQuestaoDetalhada"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:textSize="22sp"
        android:padding="16dp"
        app:layout_goneMarginTop="20dp"
        android:text="@string/stringResponder"
        app:layout_constraintEnd_toEndOf="@+id/listaComentariosQuestaoDetalhada"
        app:layout_constraintStart_toStartOf="@+id/listaComentariosQuestaoDetalhada"
        app:layout_constraintTop_toBottomOf="@+id/listaComentariosQuestaoDetalhada"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>